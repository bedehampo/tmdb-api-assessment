{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testRegex": "src/[^/]+\\.(?!e2e-)[^/]+spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1"
  },
  "moduleDirectories": ["node_modules", "<rootDir>"],
  "collectCoverageFrom": ["src/**/*.(t|j)s"],
  "coverageDirectory": "coverage",
  "testEnvironment": "node"
}
